@using CareerExplorer.Web.DTO;
@model List<RecruiterProfileDTO>

<div class="row">
    <div class="col-md-2">
        <partial name="_AdminMenuPartial" />
    </div>
    <div class="col-md-10">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Full Name</th>
                    <th scope="col">Company</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var recruiter in Model)
                {
                    <tr>
                        <th>@recruiter.Name @recruiter.Surname</th>
                        <th>@recruiter.Company</th>
                        <th>
                            <div class="w-50 btn-group" role="group">
                                <a asp-controller="Admin" asp-action="ViewRecruiterProfile" asp-route-id="@recruiter.Id" class="btn btn-primary">View recruiter profile</a>
                            </div>
                        </th>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
